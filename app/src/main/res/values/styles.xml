<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- テキストのスタイル -->
    <style name="fontSize_Big">         テキストサイズ大
        <item name="android:textColor">@color/passGeneTextBlue</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="fontSize_Normal">      テキストサイズ中
        <item name="android:textColor">@color/passGeneTextBlue</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="fontSize_Small">       テキストサイズ小
    <item name="android:textColor">@color/passGeneTextBlue</item>
    <item name="android:textSize">15sp</item>
    </style>

    <!-- 丸角背景のスタイル -->
    <style name="flame_style">         丸角背景白地青縁
        <item name="android:background">@drawable/flame_style_pg</item>
    </style>

</resources>
