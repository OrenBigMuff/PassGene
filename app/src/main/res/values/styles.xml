<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="android:textCursorDrawable">@color/passGeneBackgroundBlue</item>

        <item name="colorPrimary">@color/passGeneBackgroundBlue</item>
        <item name="colorPrimaryDark">@color/passGeneBackgroundBlue</item>
        <item name="colorAccent">@color/passGeneBackgroundBlue</item>
        <item name="android:editTextStyle">@style/EditTextColorControl</item>
        <item name="android:textColorSecondary">@color/passGeneBackgroundBlue</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="ButtonAppTheme" parent="android:Widget.DeviceDefault.ActionButton">
        <item name="android:background">@drawable/pass_blue_button</item>
    </style>

    <style name="EditTextHint" parent="@style/TextAppearance.Design.Hint">
        <item name="android:textColor">@color/passGeneTextBlue</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EditTextColorControl" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/passGeneBackgroundBlue</item>
        <item name="colorControlActivated">@color/passGeneBackgroundBlue</item>
        <item name="colorControlHighlight">@color/passGeneBackgroundBlue</item>
    </style>

    <!-- テキストのスタイル -->
    <style name="fontSize_Big">テキストサイズ大
        <item name="android:textColor">@color/passGeneTextBlue</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="fontSize_Normal">テキストサイズ中
        <item name="android:textColor">@color/passGeneTextBlue</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="fontSize_Small">テキストサイズ小
        <item name="android:textColor">@color/passGeneTextBlue</item>
        <item name="android:textSize">15sp</item>
    </style>


    <!-- 丸角背景のスタイル -->
    <style name="flame_style">丸角背景白地青縁
        <item name="android:background">@drawable/flame_style_pg</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="flame_style_red">丸角背景白地赤縁
        <item name="android:background">@drawable/flame_style_red</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="pass_blue_heading">丸角背景青見出し
        <item name="android:background">@drawable/pass_blue_heading</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/passGeneAllBack</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="pass_blue_button">丸角背景青ボタン
        <item name="android:background">@drawable/pass_blue_button</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/passGeneAllBack</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:padding">10dp</item>
    </style>


    <style name="pass_red_button">丸角背景赤ボタン
        <item name="android:background">@drawable/pass_red_button</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/passGeneAllBack</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="pass_gray_button">丸角背景灰色ボタン
        <item name="android:background">@drawable/pass_gray_button</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/passGeneAllBack</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>
